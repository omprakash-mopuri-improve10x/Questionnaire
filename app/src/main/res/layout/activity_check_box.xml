<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CheckBoxActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select all the correct answers"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Which of the following are planets"
        android:textColor="#000000"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/mercury_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mercury" />

    <CheckBox
        android:id="@+id/sun_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sun" />

    <CheckBox
        android:id="@+id/moon_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moon" />

    <CheckBox
        android:id="@+id/jupiter_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jupiter" />

    <CheckBox
        android:id="@+id/saturn_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturn" />

    <CheckBox
        android:id="@+id/pluto_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pluto" />

    <Button
        android:id="@+id/verify_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textStyle="bold" />

</LinearLayout>